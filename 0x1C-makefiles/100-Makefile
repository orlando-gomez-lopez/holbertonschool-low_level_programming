CC = gcc
SRC = main.c holberton.c
NAME = holberton
OBJ = $(subst .c,.o,$(SRC))
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
$(OBJ) : %o : %c
	$(CC) $(CFLAGS) -c -o $@ $<
clean :
	$(RM) *~ $(NAME)
oclean :
	$(RM) $(OBJ)
fclean : clean oclean
re : oclean all
